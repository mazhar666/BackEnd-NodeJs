<div class="bg-success rounded text-light text-center
     p-3 mx-auto w-50 my-5 container">
    <h2> Edit list </h2>
</div>

<div class="lists-list my-5 container w-50 mx-auto">
    <form action="/update/<%= list.id %>" method="post">
        <div class="form-group my-2">
            <label for="title">list Title</label>
            <input type="text" class="form-control" name="title" id="title" value="<%= list.title %>">
        </div>
        <div class="form-group my-2">
            <label for="description">list Description</label>
            <textarea class="form-control" name="description" id="description">
                <%= list.description %>
            </textarea>
        </div>
        <input type="submit" value="Edit list" class="btn btn-success">
    </form>
</div>