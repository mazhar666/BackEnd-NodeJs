<div class="bg-dark rounded text-light text-center p-3 mx-auto w-50 my-5 container">
    <h2> Create list</h2>
</div>
<div class="lists-list my-5 container w-50 mx-auto">
    <form action="/store" method="post">
        <div class="form-group my-2">
            <label for="title">list Title</label>
            <input type="text" class="form-control" name="title" id="title" value="">
        </div>
        <div class="form-group my-2">
            <label for="description">list Description</label>
            <textarea class="form-control" name="description" id="description">
            </textarea>
        </div>
        <input type="submit" value="Add list" class="btn btn-dark">
    </form>
</div>